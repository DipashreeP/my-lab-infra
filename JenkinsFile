pipeline {
    agent any

    stages {
        stage('Clone the Repo') {
            steps {
                echo 'Cloning the Code from Git'
                git branch:'main', url: 'https://github.com/DipashreeP/my-lab-infra.git'
            }
        }
        stage('Provision the Terraform Infra') {
            steps {
                echo 'Init the Terraform to Download and Apply Terraform with -auto-approve option'
                sh '''
                pwd
                cd terraforminfra
                terraform init
                terraform validate
                terraform fmt
                echo "its time to apply the code"
                terraform apply -auto-approve
                '''
            }
        }
        stage('Integrate Ansible'){
            steps{
                echo 'Deploy Ansible'
                sh '''
                cd ..
            
                docker inspect -f '{{.Name}} - {{.NetworkSettings.IPAddress }}' $(docker ps -aq)
                ansible-playbook aplaybooksapp2/playbook.yml -i aplaybooksapp2/inventory
                '''

            }
        }
        stage('Dummy1') {
            steps {
                echo 'Hello World'
            }
        }
    }
}